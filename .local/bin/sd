#!/usr/bin/env bash

full_path=$(eval echo "~/.sd")

help_mode=0

if [[ $# -ge 1 ]] && [ "$1" == "help" ]
then
    help_mode=1
    shift
fi

if [[ $# -eq 0 ]]; then
    echo "At least one component must be provided."
    exit
fi

completed_path=0

params=""

for arg in "$@"
do
    if [[ $completed_path -eq 1 ]]; then
        params+=" $arg"
    else
        full_path+="/$arg"
    fi

    if [ ! $completed_path -eq 1 ] && [[ -f $full_path ]]; then
        completed_path=1
    fi
done

if [[ $help_mode -eq 0 ]] && [[ -d "$full_path" ]]
then
    echo "The provided script path is incomplete."
    exit
fi

if [[ ! -e "$full_path" ]]
then
    echo "The provided path does not exist."
    exit
fi

if [ $help_mode -eq 1 ]
then
    help_path="$full_path.help"
    if [[ -f "$help_path" ]]
    then
        cat "$help_path"
    else
        item_type="script"
        if [[ -d "$full_path" ]]; then
            item_type="group"
        fi
        echo "No help is available for this $item_type."
    fi
else
    exec "$full_path" $params
fi
